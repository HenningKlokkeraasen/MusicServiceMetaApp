@model Msma.Domain.Dtos.TrackDto

<h2>@Model.Track.Name</h2>

@{ Html.RenderPartial("DisplayTemplates/AudioPlayer", Model.Track); }

<p>Duration: @Model.Track.DurationFormatted</p>

<p>By @{ Html.RenderPartial("DisplayTemplates/BunchOfArtists", Model.Track.Artists); } </p>

<p>
    From album:<br />
    <a href="/@Model.Source/Album/@Model.Track.Album.Id">
        @{ Html.RenderPartial("DisplayTemplates/AlbumCover", new Tuple<string, string>(Model.Track.Album.ImageUrl, string.Empty));}
        <br />
        @Model.Track.Album.Name
    </a>
</p>

